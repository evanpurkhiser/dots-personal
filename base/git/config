[core]
  autocrlf = false
  excludesfile = ~/.config/git/ignore

[alias]
  f   = pull --rebase origin master
  st  = status -sb
  ci  = commit -v
  co  = checkout
  ls  = log --date=short --pretty=ls
  rbm = rebase -i origin/master
  rma = !git ls-files --deleted -z | xargs -0 -r git rm
  cif = !git commit -v --fixup=$(pt --color select-commit) && git -c sequence.editor=: rebase -i origin/master

[pretty]
  ls = format:%C(cyan)%h %C(red)%ad %C(blue)[%an]%C(auto)%d %C(normal)%s

[diff]
  tool = vimdiff
  algorithm = patience
  indentHeuristic = on

[advice]
  skippedCherryPicks = false

[apply]
  whitespace = strip

[color]
  ui = true

[rerere]
  enabled = true

[rebase]
  autosquash = true
  autostash = true

[push]
  default = upstream

[url "git@github.com:"]
  insteadOf = gh:

[url "git@github.com:evanpurkhiser/"]
  insteadOf = me:

[include]
  path = user

[init]
  defaultBranch = main
