[core]
  autocrlf = false
  excludesfile = ~/.config/git/ignore

[alias]
  a   = add
  f   = pull --rebase
  d   = diff
  st  = status --short --branch
  ci  = commit --verbose
  co  = checkout
  ls  = log --date=short --pretty=ls
  rc  = rebase --continue
  ap  = add --patch
  dc  = diff --cached
  rbm = rebase --interactive
  rma = !git ls-files --deleted -z | xargs -0 -r git rm
  cif = !git commit -v --fixup=$(pt --color select-commit) && git -c sequence.editor=: rebase -i
  s   = !git show $(pt --color select-commit)

[pretty]
  ls = format:%C(cyan)%h %C(red)%ad %C(blue)[%an]%C(auto)%d %C(normal)%s

[diff]
  tool = vimdiff
  algorithm = patience
  indentHeuristic = on

[advice]
  skippedCherryPicks = false
  addEmptyPathspec = false

[apply]
  whitespace = strip

[color]
  ui = true

[rerere]
  enabled = true

[rebase]
  autosquash = true
  autostash = true

[push]
  default = upstream

[url "git@github.com:"]
  insteadOf = gh:

[url "git@github.com:evanpurkhiser/"]
  insteadOf = me:

[include]
  path = user

[init]
  defaultBranch = main
